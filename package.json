{
  "name": "angular-ssr",
  "version": "0.0.0",
  "description": "Angular server-side rendering implementation",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "scripts": {
    "postinstall": "npm run build && npm test",
    "prebuild": "rimraf build",
    "build": "tsc",
    "watch": "tsc --watch",
    "pretest": "rimraf coverage && npm run lint",
    "lint": "tslint --project tsconfig.json --type-check",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clbond/angular-ssr.git"
  },
  "author": "rangle.io",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/clbond/angular-ssr/issues"
  },
  "peerDependencies": {
    "@angular/common": "^2.4.6",
    "@angular/compiler": "^2.4.6",
    "@angular/core": "^2.4.6",
    "@angular/router": "^3.4.6",
    "reflect-metadata": "^0.1",
    "zone.js": "^0.7.6"
  },
  "optionalPeerDependencies": {
    "@ngrx/store": "^2.2.1"
  },
  "dependencies": {
    "@types/codependency": "^0.1.1",
    "@types/jasmine": "^2.5.41",
    "codependency": "^0.1.4",
    "domino": "^1.0.28",
    "reflect-metadata": "^0.1.9",
    "rimraf": "^2.5.4",
    "rxjs": "^5.1.0",
    "typescript": "^2.2.0"
  },
  "devDependencies": {
    "@angular/common": "^2.4.6",
    "@angular/compiler": "^2.4.6",
    "@angular/core": "^2.4.6",
    "@angular/platform-browser": "^2.4.7",
    "@angular/router": "^3.4.6",
    "@ngrx/store": "^2.2.1",
    "jasmine-core": "^2.5.2",
    "jasmine-promises": "^0.4.1",
    "jest": "^18.1.0",
    "ts-jest": "^18.0.3",
    "tslint": "^4.4.2",
    "zone.js": "^0.7.6"
  },
  "jest": {
    "modulePaths": [
      "<rootDir>/source"
    ],
    "setupTestFrameworkScriptFile": "jasmine-promises",
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "source/.*/tests/.*\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
