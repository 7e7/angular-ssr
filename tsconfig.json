{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "es2016", "dom"],
    "module": "commonjs",
    "baseUrl": "source",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "sourceMap": true,
    "sourceRoot": "source",
    "strictNullChecks": false,
    "rootDir": "source",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": false,
    "declaration": true,
    "outDir": "build"
  },
  "exclude": [
    "build",
    "node_modules",
    "source/**/tests"
  ]
}
